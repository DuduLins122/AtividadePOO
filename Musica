public class Musica {
    private String titulo;
    private String artista;
    private String album;
    private int duracao;

    public Musica(String titulo, String artista, String album, int duracao) {
        this.titulo = titulo;
        this.artista = artista;
        this.album = album;
        this.duracao = duracao;
    }

    public void tocar() {
        System.out.println("Tocando: " + titulo + " por " + artista);
    }

    public void exibirInfo() {
        System.out.println("Título: " + titulo + ", Artista: " + artista + ", Álbum: " + album + ", Duração: " + duracao + " segundos");
    }

    public String getTitulo() {
        return titulo;
    }
}
